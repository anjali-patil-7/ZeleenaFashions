<%- include('../partials/user/header') %>

<!-- Begin Zeleena Fashions Breadcrumb Area -->
<div class="breadcrumb-area">
    <div class="container">
        <div class="breadcrumb-content">
            <h2>Contact Us</h2>
            <ul>
                <li><a href="/">Home</a></li>
                <li class="active">Contact Us</li>
            </ul>
        </div>
    </div>
</div>
<!-- Zeleena Fashions Breadcrumb Area End Here -->

<!-- Begin Zeleena Fashions Contact Page Content Area -->
<main class="page-content">
    <div class="contact-page-area">
        <div class="container">
            <!-- Contact Form and Info Section -->
            <div class="contact-section">
                <div class="section-header">
                    <h2>Contact Us</h2>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="contact-form">
                            <p class="intro-text">Get in touch with Zeleena Fashions. We're here to help.</p>
                            <form action="/contact" method="POST">
                                <div class="form-group">
                                    <label for="name">Name</label>
                                    <input type="text" id="name" name="name" required>
                                </div>
                                <div class="form-group">
                                    <label for="email">Email</label>
                                    <input type="email" id="email" name="email" required>
                                </div>
                                <div class="form-group">
                                    <label for="subject">Subject</label>
                                    <input type="text" id="subject" name="subject" required>
                                </div>
                                <div class="form-group">
                                    <label for="message">Message</label>
                                    <textarea id="message" name="message" required></textarea>
                                </div>
                                <button type="submit" class="submit-btn">Send Message</button>
                            </form>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="contact-info">
                            <h3>Contact Details</h3>
                            <p><i class="fa fa-envelope"></i> <strong>Email:</strong> support@zeleenafashions.shop</p>
                            <p><i class="fa fa-phone"></i> <strong>Phone:</strong> +1 (123) 456-7890</p>
                            <p><i class="fa fa-map-marker-alt"></i> <strong>Address:</strong> 123 Elegance Street, Fashion City, FC 12345</p>
                            <div class="social-links">
                                <h3>Follow Us</h3>
                                <a href="#"><i class="fab fa-instagram"></i> Instagram</a>
                                <a href="#"><i class="fab fa-facebook-f"></i> Facebook</a>
                                <a href="#"><i class="fab fa-twitter"></i> Twitter</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<!-- Zeleena Fashions Contact Page Content Area End Here -->

<style>
    /* General Styles */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Inter', sans-serif;
        background-color: #ffffff;
        color: #1a1a1a;
        line-height: 1.6;
    }

    /* Breadcrumb Styles */
    .breadcrumb-area {
        background: #1a1a1a;
        padding: 15px 0;
        color: #ffffff;
    }

    .breadcrumb-content h2 {
        font-family: 'Playfair Display', serif;
        font-size: 2.5rem;
        color: #d4af37;
        margin-bottom: 10px;
    }

    .breadcrumb-content ul {
        list-style: none;
        display: flex;
        gap: 10px;
        font-size: 1rem;
    }

    .breadcrumb-content ul li a {
        color: #ffffff;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .breadcrumb-content ul li a:hover {
        color: #d4af37;
    }

    .breadcrumb-content ul li.active {
        color: #d4af37;
    }

    /* Contact Page Styles */
    .contact-page-area {
        padding: 50px 0;
        background: #ffffff;
    }

    .contact-section {
        padding: 30px;
        border-radius: 10px;
        background-color: #ffffff;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
    }

    .section-header {
        margin-bottom: 30px;
        text-align: center;
    }

    .section-header h2 {
        font-family: 'Playfair Display', serif;
        font-size: 2.8rem;
        color: #1a1a1a;
        position: relative;
        padding-bottom: 10px;
    }

    .section-header h2:after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 3px;
        background: #d4af37;
    }

    .contact-form .intro-text {
        font-size: 1.1rem;
        color: #4a4a4a;
        margin-bottom: 20px;
        text-align: center;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        font-size: 1rem;
        color: #1a1a1a;
        display: block;
        margin-bottom: 5px;
    }

    .form-group input,
    .form-group textarea {
        width: 100%;
        padding: 10px;
        border: 1px solid #e0e0e0;
        border-radius: 5px;
        font-size: 1rem;
        background: #ffffff;
        color: #1a1a1a;
        transition: border-color 0.3s ease;
    }

    .form-group input:focus,
    .form-group textarea:focus {
        border-color: #d4af37;
        outline: none;
    }

    .form-group textarea {
        resize: vertical;
        min-height: 100px;
    }

    .submit-btn {
        background: #d4af37;
        color: #1a1a1a;
        padding: 10px 25px;
        border: none;
        border-radius: 5px;
        font-family: 'Inter', sans-serif;
        font-size: 1.1rem;
        cursor: pointer;
        transition: background 0.3s ease;
    }

    .submit-btn:hover {
        background: #b8972f;
    }

    .contact-info {
        padding: 20px;
    }

    .contact-info h3 {
        font-family: 'Playfair Display', serif;
        font-size: 1.8rem;
        color: #d4af37;
        margin-bottom: 15px;
    }

    .contact-info p {
        font-size: 1rem;
        color: #4a4a4a;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .contact-info p i {
        color: #d4af37;
        font-size: 1.2rem;
    }

    .social-links {
        margin-top: 20px;
    }

    .social-links h3 {
        font-family: 'Playfair Display', serif;
        font-size: 1.6rem;
        color: #d4af37;
        margin-bottom: 10px;
    }

    .social-links a {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 1rem;
        color: #1a1a1a;
        text-decoration: none;
        margin-bottom: 10px;
        transition: color 0.3s ease;
    }

    .social-links a i {
        color: #d4af37;
        font-size: 1.2rem;
    }

    .social-links a:hover {
        color: #d4af37;
    }

    /* Responsive Styles */
    @media (max-width: 992px) {
        .row {
            flex-direction: column;
        }

        .contact-form,
        .contact-info {
            margin-bottom: 20px;
        }
    }

    @media (max-width: 768px) {
        .contact-section {
            padding: 20px;
        }

        .section-header h2 {
            font-size: 2.2rem;
        }

        .contact-info h3 {
            font-size: 1.6rem;
        }
    }
</style>

<%- include('../partials/user/footer') %>