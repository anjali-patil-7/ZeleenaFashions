<script>
    function submitContactForm(event) {
        event.preventDefault();
        
        const form = event.target;
        const formData = new FormData(form);
        const data = Object.fromEntries(formData);

        // Validation
        if (!validateContactForm(data)) {
            return;
        }
        
        // Here you would typically send this data to your server
        // For now, we'll just show a success message
        Swal.fire({
            icon: 'success',
            title: 'Message Sent!',
            text: 'Thank you for contacting us. We will get back to you shortly.',
            confirmButtonColor: '#595959'
        }).then(() => {
            form.reset();
        });
    }

    function validateContactForm(data) {
        // Name validation
        const nameRegex = /^[a-zA-Z\s]{2,50}$/;
        if (!nameRegex.test(data.name)) {
            Swal.fire({
                icon: 'error',
                title: 'Invalid Name',
                text: 'Name should be 2-50 characters long and contain only letters and spaces',
                confirmButtonColor: '#595959'
            });
            return false;
        }

        // Email validation
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailRegex.test(data.email)) {
            Swal.fire({
                icon: 'error',
                title: 'Invalid Email',
                text: 'Please enter a valid email address',
                confirmButtonColor: '#595959'
            });
            return false;
        }

        // Phone validation (optional field)
        if (data.phone) {
            const phoneRegex = /^\d{10}$/;
            if (!phoneRegex.test(data.phone)) {
                Swal.fire({
                    icon: 'error',
                    title: 'Invalid Phone Number',
                    text: 'Phone number should be exactly 10 digits',
                    confirmButtonColor: '#595959'
                });
                return false;
            }
        }

        // Subject validation
        if (data.subject.trim().length < 3) {
            Swal.fire({
                icon: 'error',
                title: 'Invalid Subject',
                text: 'Subject must be at least 3 characters long',
                confirmButtonColor: '#595959'
            });
            return false;
        }

        // Message validation
        if (data.message.trim().length < 10) {
            Swal.fire({
                icon: 'error',
                title: 'Invalid Message',
                text: 'Message must be at least 10 characters long',
                confirmButtonColor: '#595959'
            });
            return false;
        }

        return true;
    }
</script>