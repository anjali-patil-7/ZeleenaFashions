            background: #ffffff;
            color: #1a1a1a;
        }

        .offcanvas-menu-inner .btn-close {
            color: #1a1a1a;
            font-size: 24px;
        }

        .offcanvas-inner_search .hm-searchbox input {
            border-radius: 20px;
            padding: 10px 40px 10px 15px;
            font-size: 15px;
        }

        .offcanvas-inner_search .search-cancel-icon {
            right: 45px;
        }

        .offcanvas-navigation ul li a {
            color: #1a1a1a;
            font-size: 16px;
            font-weight: 600;
            padding: 10px 0;
            transition: color 0.3s ease;
        }

        .offcanvas-navigation ul li a:hover {
            color: #d4af37;
        }

        /* Minicart */
        .offcanvas-minicart_wrapper {
            background: #ffffff;
        }

        .minicart-heading h4 {
            color: #1a1a1a;
            font-size: 24px;
