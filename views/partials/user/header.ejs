            gap: 20px;
            justify-content: flex-end;
        }

        .header-right_area nav ul li a {
            color: #1a1a1a;
            font-size: 24px;
            transition: color 0.3s ease, transform 0.3s ease;
        }

        .header-right_area nav ul li a:hover {
            color: #d4af37;
            transform: scale(1.2);
        }

        /* Offcanvas Menu */
