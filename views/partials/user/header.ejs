        }

        .minicart-product {
            border-bottom: 1px solid #e5e5e5;
            padding: 15px 0;
        }

        .minicart-product .product-item_title {
            color: #1a1a1a;
            font-size: 16px;
            transition: color 0.3s ease;
        }

        .minicart-product .product-item_title:hover {
            color: #d4af37;
        }

