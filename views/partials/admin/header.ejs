    <style>
        /* Sidebar background and menu styling */
        .navbar-aside {
            background-color: #000000; /* Black background */
            border-right: 1px solid #FFFFFF; /* White border */
            width: 350px; /* Increased width */
            transition: width 0.3s ease; /* Smooth transition for minimize/expand */
        }
        /* Adjust width when sidebar is minimized */
        .navbar-aside.minimized {
            width: 110px; /* Increased minimized width */
        }
        .aside-top {
            background-color: #000000; /* Black background */
        }
        .menu-aside .menu-item {
            border-bottom: 1px solid #FFFFFF; /* White border between items */
        }
        .menu-aside .text {
            color: #FFD700; /* Golden yellow text */
            font-family: 'Montserrat', sans-serif;
            font-weight: 700; /* Bold */
            text-transform: uppercase; /* Uppercase */
            font-size: 14px;
        }
        .menu-link {
            color: #FFD700; /* Golden yellow text */
            font-family: 'Montserrat', sans-serif;
            transition: background-color 0.3s, color 0.3s;
        }
        .menu-link:hover, .menu-link.active {
            background-color: #FFFFFF; /* White background on hover/active */
            color: #FFD700; /* Golden yellow text */
        }
        .material-icons {
            color: #FFD700; /* Golden yellow icons */
        }
        .menu-link:hover .material-icons, .menu-link.active .material-icons {
            color: #FFD700; /* Golden yellow icons on hover/active */
        }
        /* Adjust main content to accommodate wider sidebar */
        .main-wrap {
            margin-left: 350px; /* Match the sidebar width */
            transition: margin-left 0.3s ease; /* Smooth transition */
        }
        .main-wrap.minimized {
            margin-left: 110px; /* Match the minimized sidebar width */
        }
        /* Header styling */
        .main-header {
            background-color: #000000; /* Black background */
            border-bottom: 1px solid #FFFFFF; /* White border */
        }
        .nav-item .nav-link {
            color: #FFD700; /* Golden yellow icons/text */
        }
        .dropdown-menu {
            background-color: #000000; /* Black background */
            border: 1px solid #FFFFFF; /* White border */
            border-radius: 4px;
        }
        .dropdown-item {
            color: #FFD700; /* Golden yellow text */
            font-family: 'Montserrat', sans-serif;
            font-weight: 500;
        }
        .dropdown-item:hover {
            background-color: #FFFFFF; /* White background on hover */
            color: #FFD700; /* Golden yellow text */
        }
        .dropdown-item.text-danger {
            color: #FFD700 !important; /* Golden yellow text for logout */
        }
        .dropdown-item .material-icons {
            color: #FFD700; /* Golden yellow icons */
        }
        .badge.rounded-pill {
            background-color: #FFFFFF; /* White background */
            color: #FFD700; /* Golden yellow text */
            font-family: 'Montserrat', sans-serif;
        }
        /* Responsive adjustments */
        @media (max-width: 768px) {
            .navbar-aside {
                width: 100%; /* Full width on mobile (offcanvas behavior) */
            }
            .main-wrap {
                margin-left: 0; /* No margin on mobile */
            }
        }
    </style>
</head>

