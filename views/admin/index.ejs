<%- include('../partials/admin/header') %>

<style>
    .flash-message {
        display: flex;
        align-items: center;
        padding: 12px 16px;
        margin-bottom: 20px;
        border-radius: 4px;
        font-weight: 500;
        font-family: 'Montserrat', sans-serif;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        animation: fadeIn 0.3s ease-in-out;
        position: fixed;
        top: 20px;
        right: 20px;
        max-width: 300px;
        z-index: 1000;
    }

    .flash-message svg {
        width: 24px;
        height: 24px;
        margin-right: 12px;
        flex-shrink: 0;
    }

    .error-message,
    .success-message {
        background-color: #ffffff; /* White background */
        color: #000000; /* Black text */
        border: 1px solid #FFD700; /* Gold border */
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .dashboard-table {
        width: 100%;
        border-collapse: collapse;
        margin: 25px 0;
        border: 1px solid #000000;
        font-family: 'Montserrat', sans-serif;
    }

    .dashboard-table th {
        padding: 15px;
        text-align: center;
        background-color: #000000; /* Black background */
        color: #FFD700; /* Gold text */
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .dashboard-table td {
        padding: 12px;
        text-align: center;
        border: 1px solid #e0e0e0;
        color: #333;
    }

    .dashboard-table tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    .dashboard-table tr:hover {
        background-color: #f0f0f0;
    }

    .badge {
        padding: 8px 16px;
        border-radius: 4px;
        font-family: 'Montserrat', sans-serif;
        font-weight: 500;
    }

    .badge-soft-success {
        background-color: #000000; /* Black background */
        color: #FFD700; /* Gold text */
    }

    .badge-soft-warning {
        background-color: #000000; /* Black background */
        color: #FFD700; /* Gold text */
    }

    .badge-soft-danger {
        background-color: #000000; /* Black background */
        color: #FFD700; /* Gold text */
    }
</style>

<% if (error_msg && error_msg.length > 0) { %>
  <div class="flash-message error-message" id="flash-message">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="#FFD700" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-alert-circle">
      <circle cx="12" cy="12" r="10"></circle>
      <line x1="12" y1="8" x2="12" y2="12"></line>
      <line x1="12" y1="16" x2="12.01" y2="16"></line>
    </svg>
    <span style="font-family: 'Montserrat', sans-serif;"><%= error_msg %></span>
  </div>
<% } %>

<% if (success_msg && success_msg.length > 0) { %>
  <div class="flash-message success-message" id="flash-message">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="#FFD700" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-check-circle">
      <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
      <polyline points="22 4 12 14.01 9 11.01"></polyline>
    </svg>
    <span style="font-family: 'Montserrat', sans-serif;"><%= success_msg %></span>
  </div>
<% } %>

<section class="content-main" style="background: #ffffff; padding: 20px; min-height: 80vh;">
  <div class="content-header">
    <div>
      <h2 class="content-title" style="font-family: 'Montserrat', sans-serif; font-weight: 600;">Dashboard</h2>
      <p style="color: #666; font-family: 'Montserrat', sans-serif;">Business Analytics - <%= filter.charAt(0).toUpperCase() + filter.slice(1) %> View</p>
    </div>
    <div class="btn-group" role="group" aria-label="Dashboard Controls" style="display: flex; gap: 5px;">
      <a href="?filter=daily" 
         class="btn <%= filter === 'daily' ? 'active' : '' %>" 
         style="background-color: #000000; color: #FFD700; padding: 10px 20px; border: none; border-radius: 4px; text-decoration: none; font-family: 'Montserrat', sans-serif; font-weight: 500; transition: all 0.3s;"
         onmouseover="this.style.backgroundColor='#FFD700'; this.style.color='#000000';"
         onmouseout="this.style.backgroundColor='#000000'; this.style.color='#FFD700';">
        Daily
      </a>
      <a href="?filter=weekly" 
         class="btn <%= filter === 'weekly' ? 'active' : '' %>" 
         style="background-color: #000000; color: #FFD700; padding: 10px 20px; border: none; border-radius: 4px; text-decoration: none; font-family: 'Montserrat', sans-serif; font-weight: 500; transition: all 0.3s;"
         onmouseover="this.style.backgroundColor='#FFD700'; this.style.color='#000000';"
         onmouseout="this.style.backgroundColor='#000000'; this.style.color='#FFD700';">
        Weekly
      </a>
      <a href="?filter=monthly" 
         class="btn <%= filter === 'monthly' ? 'active' : '' %>" 
         style="background-color: #000000; color: #FFD700; padding: 10px 20px; border: none; border-radius: 4px; text-decoration: none; font-family: 'Montserrat', sans-serif; font-weight: 500; transition: all 0.3s;"
         onmouseover="this.style.backgroundColor='#FFD700'; this.style.color='#000000';"
         onmouseout="this.style.backgroundColor='#000000'; this.style.color='#FFD700';">
        Monthly
      </a>
      <a href="?filter=yearly" 
         class="btn <%= filter === 'yearly' ? 'active' : '' %>" 
         style="background-color: #000000; color: #FFD700; padding: 10px 20px; border: none; border-radius: 4px; text-decoration: none; font-family: 'Montserrat', sans-serif; font-weight: 500; transition: all 0.3s;"
         onmouseover="this.style.backgroundColor='#FFD700'; this.style.color='#000000';"
         onmouseout="this.style.backgroundColor='#000000'; this.style.color='#FFD700';">
        Yearly
      </a>
      <a href="/admin/sales/monthly" 
         class="btn" 
         style="background-color: #000000; color: #FFD700; padding: 10px 20px; border: none; border-radius: 4px; text-decoration: none; font-family: 'Montserrat', sans-serif; font-weight: 500; transition: all 0.3s;"
         onmouseover="this.style.backgroundColor='#FFD700'; this.style.color='#000000';"
         onmouseout="this.style.backgroundColor='#000000'; this.style.color='#FFD700';">
        Generate Sales Report
      </a>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="row">
    <div class="col-lg-3">
      <div class="card card-body mb-4" style="background-color: #ffffff; border: 1px solid #000000; border-radius: 4px;">
        <article class="icontext">
          <span class="icon icon-sm rounded-circle" style="background-color: #000000;">
            <i class="material-icons md-monetization_on" style="color: #FFD700;"></i>
          </span>
          <div class="text">
            <h6 class="mb-1 card-title" style="font-family: 'Montserrat', sans-serif; font-weight: 600; color: #000000;">Revenue</h6>
            <span style="color: #000000; font-family: 'Montserrat', sans-serif;"><%= revenue.toFixed(2) %></span>
            <span class="text-sm" style="color: #666; font-family: 'Montserrat', sans-serif;">Based on <%= filter %> data</span>
          </div>
        </article>
      </div>
    </div>
    <div class="col-lg-3">
      <div class="card card-body mb-4" style="background-color: #ffffff; border: 1px solid #000000; border-radius: 4px;">
        <article class="icontext">
          <span class="icon icon-sm rounded-circle" style="background-color: #000000;">
            <i class="material-icons md-local_shipping" style="color: #FFD700;"></i>
          </span>
          <div class="text">
            <h6 class="mb-1 card-title" style="font-family: 'Montserrat', sans-serif; font-weight: 600; color: #000000;">Orders</h6>
            <span style="color: #000000; font-family: 'Montserrat', sans-serif;"><%= orders %></span>
            <span class="text-sm" style="color: #666; font-family: 'Montserrat', sans-serif;">Delivered orders</span>
          </div>
        </article>
      </div>
    </div>
    <div class="col-lg-3">
      <div class="card card-body mb-4" style="background-color: #ffffff; border: 1px solid #000000; border-radius: 4px;">
        <article class="icontext">
          <span class="icon icon-sm rounded-circle" style="background-color: #000000;">
            <i class="material-icons md-qr_code" style="color: #FFD700;"></i>
          </span>
          <div class="text">
            <h6 class="mb-1 card-title" style="font-family: 'Montserrat', sans-serif; font-weight: 600; color: #000000;">Products</h6>
            <span style="color: #000000; font-family: 'Montserrat', sans-serif;"><%= products %></span>
            <span class="text-sm" style="color: #666; font-family: 'Montserrat', sans-serif;">Active products</span>
          </div>
        </article>
      </div>
    </div>
    <div class="col-lg-3">
      <div class="card card-body mb-4" style="background-color: #ffffff; border: 1px solid #000000; border-radius: 4px;">
        <article class="icontext">
          <span class="icon icon-sm rounded-circle" style="background-color: #000000;">
            <i class="material-icons md-shopping_basket" style="color: #FFD700;"></i>
          </span>
          <div class="text">
            <h6 class="mb-1 card-title" style="font-family: 'Montserrat', sans-serif; font-weight: 600; color: #000000;">Monthly Earning</h6>
            <span style="color: #000000; font-family: 'Montserrat', sans-serif;"><%= monthlyEarning.toFixed(2) %></span>
            <span class="text-sm" style="color: #666; font-family: 'Montserrat', sans-serif;">Current month</span>
          </div>
        </article>
      </div>
    </div>
  </div>

  <!-- Charts and Tables -->
  <div class="row">
    <div class="col-xl-8 col-lg-12">
      <div class="card mb-4" style="background-color: #ffffff; border: 1px solid #000000; border-radius: 4px;">
        <article class="card-body">
          <h5 class="card-title" style="font-family: 'Montserrat', sans-serif; font-weight: 600; color: #000000;">Sale Statistics</h5>
          <canvas id="salesChart" height="120"></canvas>
        </article>
      </div>

      <!-- Best Selling Products -->
      <div class="card mb-4" style="background-color: #ffffff; border: 1px solid #000000; border-radius: 4px;">
        <article class="card-body">
          <h5 class="card-title" style="font-family: 'Montserrat', sans-serif; font-weight: 600; color: #000000;">Top 10 Best Selling Products</h5>
          <div class="table-responsive">
            <table class="dashboard-table">
              <thead>
                <tr>
                  <th>Product</th>
                  <th>Units Sold</th>
                  <th>Revenue</th>
                </tr>
              </thead>
              <tbody>
                <% bestSellingProducts.forEach(product => { %>
                  <tr>
                    <td style="color: #333;"><%= product.product?.productName || 'Unknown Product' %></td>
                    <td style="color: #333;"><%= product.totalSold || 0 %></td>
                    <td style="color: #333;"><%= product.totalRevenue?.toFixed(2) || '0.00' %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </article>
      </div>

      <!-- Best Selling Categories -->
      <div class="card mb-4" style="background-color: #ffffff; border: 1px solid #000000; border-radius: 4px;">
        <article class="card-body">
          <h5 class="card-title" style="font-family: 'Montserrat', sans-serif; font-weight: 600; color: #000000;">Top 10 Best Selling Categories</h5>
          <div class="table-responsive">
            <table class="dashboard-table">
              <thead>
                <tr>
                  <th>Category</th>
                  <th>Units Sold</th>
                  <th>Revenue</th>
                </tr>
              </thead>
              <tbody>
                <% bestSellingCategories.forEach(category => { %>
                  <tr>
                    <td style="color: #333;"><%= category.category?.name || 'Unknown Category' %></td>
                    <td style="color: #333;"><%= category.totalSold || 0 %></td>
                    <td style="color: #333;"><%= category.totalRevenue?.toFixed(2) || '0.00' %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </article>
      </div>
    </div>

    <!-- Latest Orders -->
    <div class="col-xl-4 col-lg-12">
      <div class="card mb-4" style="background-color: #ffffff; border: 1px solid #000000; border-radius: 4px;">
        <article class="card-body">
          <h5 class="card-title" style="font-family: 'Montserrat', sans-serif; font-weight: 600; color: #000000;">Latest Orders</h5>
          <div class="table-responsive">
            <table class="dashboard-table">
              <thead>
                <tr>
                  <th>Order ID</th>
                  <th>Customer</th>
                  <th>Amount</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                <% latestOrders.forEach(order => { %>
                  <tr>
                    <td style="color: #333;"><%= order.orderNumber || 'N/A' %></td>
                    <td style="color: #333;"><%= order.userId?.name || 'Unknown User' %></td>
                    <td style="color: #333;"><%= order.finalAmount?.toFixed(2) || '0.00' %></td>
                    <td>
                      <span class="badge badge-pill badge-soft-<%= order.orderStatus === 'Delivered' ? 'success' : order.orderStatus === 'Pending' ? 'warning' : 'danger' %>">
                        <%= order.orderStatus || 'N/A' %>
                      </span>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </article>
      </div>
    </div>
  </div>
</section>

<!-- Chart.js Script -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  const salesData = <%- JSON.stringify(salesData || []) %>;
  const filter = '<%= filter %>';

  // Format labels based on filter
  const formatLabel = (id) => {
    if (filter === 'yearly') {
      // For yearly filter, convert "YYYY-MM" to "MMM YYYY" (e.g., "Jan 2025")
      const [year, month] = id.split('-');
      const date = new Date(year, parseInt(month) - 1);
      return date.toLocaleString('default', { month: 'short', year: 'numeric' });
    } else {
      // For daily, weekly, monthly filters, convert "YYYY-MM-DD" to "MMM DD" (e.g., "May 01")
      const [year, month, day] = id.split('-');
      const date = new Date(year, parseInt(month) - 1, day);
      return date.toLocaleString('default', { month: 'short', day: '2-digit' });
    }
  };

  const salesCtx = document.getElementById('salesChart').getContext('2d');
  const salesChart = new Chart(salesCtx, {
    type: 'line',
    data: {
      labels: salesData.map(d => formatLabel(d._id || 'Unknown')),
      datasets: [{
        label: 'Sales Revenue',
        data: salesData.map(d => d.total || 0),
        borderColor: '#FFD700', /* Gold */
        backgroundColor: 'rgba(255, 215, 0, 0.2)', /* Gold with opacity */
        fill: true,
        tension: 0.1
      }]
    },
    options: {
      scales: {
        y: { 
          beginAtZero: true, 
          title: { 
            display: true, 
            text: 'Revenue ($)', 
            color: '#000000', 
            font: { family: 'Montserrat', weight: '500' } 
          }
        },
        x: { 
          title: { 
            display: true, 
            text: filter.charAt(0).toUpperCase() + filter.slice(1) + ' Period', 
            color: '#000000', 
            font: { family: 'Montserrat', weight: '500' } 
          }
        }
      }
    }
  });

  function removeFlashMessage() {
    const flashMessage = document.getElementById('flash-message');
    if (flashMessage) {
      setTimeout(() => {
        flashMessage.remove();
      }, 3000);
    }
  }

  window.onload = removeFlashMessage;
</script>

