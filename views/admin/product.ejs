<%- include('../partials/admin/header') %>

<style>
    :root {
        --font-heading: 'Montserrat', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        --font-body: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        --color-primary: #000000;
        --color-accent: #FFD700;
        --color-text: #333333;
        --color-muted: #666666;
    }

    .content-title {
        font-family: var(--font-heading);
        font-size: 1.5rem;
        font-weight: 700;
        line-height: 1.3;
        color: var(--color-primary);
        margin-bottom: 0.5rem;
    }

    .content-main p,
    .no-data {
        font-family: var(--font-body);
        font-size: 0.875rem;
        font-weight: 400;
        line-height: 1.6;
        color: var(--color-muted);
    }

    .content-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.25rem;
    }

    .add-category-btn {
        background-color: var(--color-primary);
        color: var(--color-accent);
        padding: 0.625rem 1.25rem;
        border: none;
        border-radius: 0.25rem;
        text-decoration: none;
        font-family: var(--font-heading);
        font-size: 0.875rem;
        font-weight: 500;
        line-height: 1.4;
        transition: all 0.3s;
    }

    .add-category-btn:hover {
        background-color: var(--color-accent);
        color: var(--color-primary);
    }

    .search-container {
        margin-bottom: 1.875rem;
    }

    .search-container form {
        display: flex;
        max-width: 31.25rem;
    }

    .search-container input {
        flex: 1;
        padding: 0.625rem 0.9375rem;
        border: 1px solid var(--color-primary);
        border-radius: 0.25rem 0 0 0.25rem;
        font-family: var(--font-body);
        font-size: 0.875rem;
        font-weight: 400;
        line-height: 1.5;
        color: var(--color-text);
    }

    .search-container input::placeholder {
        color: var(--color-muted);
    }

    .search-container button {
        background-color: var(--color-primary);
        color: var(--color-accent);
        padding: 0.625rem 1.25rem;
        border: none;
        border-radius: 0 0.25rem 0.25rem 0;
        cursor: pointer;
        font-family: var(--font-heading);
        font-size: 0.875rem;
        font-weight: 500;
        line-height: 1.4;
        transition: all 0.3s;
    }

    .search-container button:hover {
        background-color: var(--color-accent);
        color: var(--color-primary);
    }

    .search-container a {
        background-color: #f8f8f8;
        color: var(--color-primary);
        padding: 0.625rem 0.9375rem;
        border: 1px solid var(--color-primary);
        border-left: none;
        text-decoration: none;
        display: flex;
        align-items: center;
        font-family: var(--font-heading);
        font-size: 0.875rem;
        font-weight: 500;
        line-height: 1.4;
        transition: all 0.3s;
    }

    .search-container a:hover {
        background-color: var(--color-accent);
        color: var(--color-primary);
    }

    .products-table {
        width: 100%;
        border-collapse: collapse;
        margin: 1.5rem 0;
        border: 1px solid var(--color-primary);
        font-family: var(--font-body);
        font-size: 0.875rem;
        line-height: 1.5;
    }

    .products-table th {
        padding: 0.9375rem;
        text-align: center;
        background-color: var(--color-primary);
        color: var(--color-accent);
        font-family: var(--font-heading);
        font-size: 0.875rem;
        font-weight: 600;
        line-height: 1.3;
        letter-spacing: 0.03em;
        text-transform: uppercase;
    }

    .products-table td {
        padding: 0.75rem;
        text-align: center;
        border: 1px solid #e0e0e0;
        color: var(--color-text);
        font-weight: 400;
    }

    .products-table tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    .products-table tr:hover {
        background-color: #f0f0f0;
    }

    .action-buttons {
        display: flex;
        gap: 0.3125rem;
        justify-content: center;
    }

    .action-btn {
        padding: 0.5rem 1rem;
        border: none;
        border-radius: 0.25rem;
        cursor: pointer;
        color: var(--color-accent);
        background-color: var(--color-primary);
        text-decoration: none;
        display: inline-block;
        font-family: var(--font-heading);
        font-size: 0.75rem;
        font-weight: 500;
        line-height: 1.3;
        transition: all 0.3s;
    }

    .action-btn:hover {
        background-color: var(--color-accent);
        color: var(--color-primary);
    }

    .pagination {
        margin-top: 1.875rem;
        display: flex;
        gap: 0.5rem;
        justify-content: center;
        align-items: center;
    }

    .page-link {
        padding: 0.5rem 0.875rem;
        border: 1px solid var(--color-primary);
        text-decoration: none;
        color: var(--color-primary);
        font-family: var(--font-heading);
        font-size: 0.875rem;
        font-weight: 500;
        line-height: 1.4;
        border-radius: 0.25rem;
        transition: all 0.3s;
    }

    .page-link:hover {
        background-color: var(--color-primary);
        color: var(--color-accent);
    }

    .page-link.active {
        background-color: var(--color-primary);
        color: var(--color-accent);
        font-weight: 600;
    }

    .no-data {
        text-align: center;
        font-weight: 500;
        font-size: 1rem;
    }

    .spinner {
        display: inline-block;
        width: 1.125rem;
        height: 1.125rem;
        border: 3px solid rgba(255, 215, 0, 0.3);
        border-radius: 50%;
        border-top-color: var(--color-accent);
        animation: spin 1s ease-in-out infinite;
    }

    @keyframes spin {
        to { transform: rotate(360deg); }
    }

    .product-image {
        max-width: 3.125rem;
        max-height: 3.125rem;
        display: block;
        margin: 0 auto;
        object-fit: contain;
    }

    .image-placeholder {
        max-width: 3.125rem;
        max-height: 3.125rem;
        display: block;
        margin: 0 auto;
        color: var(--color-muted);
        font-family: var(--font-body);
        font-size: 0.75rem;
    }

    .gold-swal {
        border: 2px solid var(--color-accent) !important;
        font-family: var(--font-body) !important;
        font-size: 0.875rem !important;
    }

    .gold-confirm-btn {
        background-color: var(--color-primary) !important;
        color: var(--color-accent) !important;
        font-family: var(--font-heading) !important;
        font-size: 0.875rem !important;
        font-weight: 500 !important;
    }
</style>

<section class="content-main" style="background: #ffffff; padding: 1.25rem; min-height: 80vh;">
    <div class="content-header">
        <div>
            <h2 class="content-title">Product List</h2>
            <p>Product Management</p>
        </div>
        <a href="/admin/addproduct" class="add-category-btn">+ Add Product</a>
    </div>

    <div class="search-container">
        <form action="/admin/product" method="GET">
            <div style="display: flex; max-width: 31.25rem;">
                <input 
                    type="text" 
                    name="query" 
                    placeholder="Search by product name or description..." 
                    value="<%= searchQuery ? searchQuery.replace(/"/g, '"') : '' %>"
                >
                <button type="submit">Search</button>
                <% if (searchQuery) { %>
                    <a href="/admin/product">Clear</a>
                <% } %>
            </div>
        </form>
    </div>

    <% if (products && products.length > 0) { %>
        <table class="products-table">
            <thead>
                <tr>
                    <th>SL.No</th>
                    <th>Product Name</th>
                    <th>Image</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach((product, index) => { %>
                    <tr id="product-row-<%= product._id %>">
                        <td><%= (currentPage - 1) * 5 + index + 1 %></td>
                        <td><%= product.productName %></td>
                        <td>
                            <% if (product.productImage && product.productImage[0]) { %>
                                <img src="<%= product.productImage[0] %>" 
                                     class="product-image" 
                                     alt="<%= product.productName %>"
                                     onerror="this.src='/images/placeholder.png'; this.className='image-placeholder';">
                            <% } else { %>
                                <span class="image-placeholder">No Image</span>
                            <% } %>
                        </td>
                        <td><%= product.description %></td>
                        <td><%= product.category ? product.category.name : 'N/A' %></td>
                        <td><%= product.price %></td>
                        <td><%= product.totalStock %></td>
                        <td id="status-<%= product._id %>" style="font-weight: 500; color: <%= product.status ? '#28a745' : '#dc3545' %>;">
                            <%= product.status ? "Active" : "Inactive" %>
                        </td>
                        <td>
                            <div class="action-buttons">
                                <button id="block-btn-<%= product._id %>" 
                                        onclick="toggleProductStatus('<%= product._id %>', '<%= product.status %>')" 
                                        class="action-btn">
                                    <%= product.status ? "Block" : "Unblock" %>
                                </button>
                                <a href="/admin/editproduct/<%= product._id %>" class="action-btn">Edit</a>
                                <button id="delete-btn-<%= product._id %>" 
                                        onclick="deleteProduct('<%= product._id %>')" 
                                        class="action-btn">
                                    Delete
                                </button>
                            </div>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p class="no-data">No products found</p>
    <% } %>

    <% if (products && products.length > 0 && totalPages > 1) { %>
        <div class="pagination">
            <% if (currentPage > 1) { %>
                <a href="/admin/product?page=<%= currentPage - 1 %><%= searchQuery ? '&query=' + encodeURIComponent(searchQuery) : '' %>" class="page-link">←</a>
            <% } %>
            
            <% 
                const maxPagesToShow = 5;
                const halfRange = Math.floor(maxPagesToShow / 2);
                let startPage = Math.max(1, currentPage - halfRange);
                let endPage = Math.min(totalPages, startPage + maxPagesToShow - 1);
                if (endPage - startPage + 1 < maxPagesToShow) {
                    startPage = Math.max(1, endPage - maxPagesToShow + 1);
                }
            %>

            <% if (startPage > 1) { %>
                <a href="/admin/product?page=1<%= searchQuery ? '&query=' + encodeURIComponent(searchQuery) : '' %>" class="page-link">1</a>
                <% if (startPage > 2) { %>
                    <span class="page-link">...</span>
                <% } %>
            <% } %>

            <% for (let i = startPage; i <= endPage; i++) { %>
                <a href="/admin/product?page=<%= i %><%= searchQuery ? '&query=' + encodeURIComponent(searchQuery) : '' %>" class="page-link <%= i === currentPage ? 'active' : '' %>">
                    <%= i %>
                </a>
            <% } %>

            <% if (endPage < totalPages) { %>
                <% if (endPage < totalPages - 1) { %>
                    <span class="page-link">...</span>
                <% } %>
                <a href="/admin/product?page=<%= totalPages %><%= searchQuery ? '&query=' + encodeURIComponent(searchQuery) : '' %>" class="page-link"><%= totalPages %></a>
            <% } %>

            <% if (currentPage < totalPages) { %>
                <a href="/admin/product?page=<%= currentPage + 1 %><%= searchQuery ? '&query=' + encodeURIComponent(searchQuery) : '' %>" class="page-link">→</a>
            <% } %>
        </div>
    <% } %>
</section>

<%- include('../partials/admin/footer') %>

<script>
    function toggleProductStatus(productId, currentStatus) {
        Swal.fire({
            title: "Are you sure?",
            text: `Do you want to ${currentStatus ? "block" : "unblock"} this product?`,
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: '#000000',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes',
            cancelButtonText: 'No',
            customClass: {
                popup: 'gold-swal',
                confirmButton: 'gold-confirm-btn'
            }
        }).then((result) => {
            if (result.isConfirmed) {
                const button = document.getElementById(`block-btn-${productId}`);
                const statusCell = document.getElementById(`status-${productId}`);
                
                const originalText = button.innerHTML;
                button.innerHTML = '<div class="spinner"></div>';
                button.disabled = true;
                
                fetch(`/admin/api/blockproduct/${productId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    button.innerHTML = data.status ? "Block" : "Unblock";
                    button.disabled = false;
                    statusCell.textContent = data.status ? "Active" : "Inactive";
                    statusCell.style.color = data.status ? "#28a745" : "#dc3545";
                    
                    Swal.fire({
                        title: "Success!",
                        text: `Product ${data.status ? "unblocked" : "blocked"} successfully`,
                        icon: "success",
                        confirmButtonColor: "#000000",
                        customClass: {
                            popup: 'gold-swal',
                            confirmButton: 'gold-confirm-btn'
                        }
                    });
                })
                .catch(error => {
                    console.error('Error:', error);
                    button.innerHTML = originalText;
                    button.disabled = false;
                    
                    Swal.fire({
                        title: "Error!",
                        text: "Something went wrong. Please try again.",
                        icon: "error",
                        confirmButtonColor: "#000000",
                        customClass: {
                            popup: 'gold-swal',
                            confirmButton: 'gold-confirm-btn'
                        }
                    });
                });
            }
        });
    }

    function deleteProduct(productId) {
        Swal.fire({
            title: "Are you sure?",
            text: "This product will be soft deleted and can be restored later.",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: '#000000',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it',
            cancelButtonText: 'No',
            customClass: {
                popup: 'gold-swal',
                confirmButton: 'gold-confirm-btn'
            }
        }).then((result) => {
            if (result.isConfirmed) {
                const button = document.getElementById(`delete-btn-${productId}`);
                const originalText = button.innerHTML;
                button.innerHTML = '<div class="spinner"></div>';
                button.disabled = true;

                fetch(`/admin/api/deleteproduct/${productId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    button.disabled = false;

                    // Remove the product row from the table
                    const row = document.getElementById(`product-row-${productId}`);
                    if (row) {
                        row.remove();
                    }

                    // Update SL.No for remaining rows
                    const rows = document.querySelectorAll('.products-table tbody tr');
                    rows.forEach((row, index) => {
                        const slNoCell = row.querySelector('td:first-child');
                        slNoCell.textContent = (currentPage - 1) * 5 + index + 1;
                    });

                    // If no products remain, show "No products found" and handle pagination
                    if (rows.length === 0) {
                        const table = document.querySelector('.products-table');
                        table.insertAdjacentHTML('afterend', '<p class="no-data">No products found</p>');
                        table.remove();
                        // Redirect to previous page if current page is empty and not the first page
                        if (currentPage > 1) {
                            window.location.href = `/admin/product?page=${currentPage - 1}${searchQuery ? '&query=' + encodeURIComponent(searchQuery) : ''}`;
                        }
                    }

                    Swal.fire({
                        title: "Deleted!",
                        text: "Product has been soft deleted successfully.",
                        icon: "success",
                        confirmButtonColor: "#000000",
                        customClass: {
                            popup: 'gold-swal',
                            confirmButton: 'gold-confirm-btn'
                        }
                    });
                })
                .catch(error => {
                    console.error('Error:', error);
                    button.innerHTML = originalText;
                    button.disabled = false;

                    Swal.fire({
                        title: "Error!",
                        text: "Something went wrong. Please try again.",
                        icon: "error",
                        confirmButtonColor: "#000000",
                        customClass: {
                            popup: 'gold-swal',
                            confirmButton: 'gold-confirm-btn'
                        }
                    });
                });
            }
        });
    }
</script>